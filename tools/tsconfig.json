{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "../build/tools/",
    "rootDir": "./",
    "target": "es6",
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["../node_modules"]
}
